<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <android.support.v7.widget.CardView
    android:layout_width="200dp"
    android:layout_height="0dp"
    android:layout_margin="@dimen/margin_small"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_small"
    app:layout_goneMarginTop="@dimen/margin_micro"
    app:layout_goneMarginBottom="@dimen/margin_micro"
    app:cardBackgroundColor="?attr/viewColor"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/no_elevation"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintDimensionRatio="2:1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <ImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:src="@drawable/genre"
      android:foreground="@color/scrim_card"
      android:scaleType="fitXY"/>

    <TextView
      android:id="@+id/txt_title_genre"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_normal"
      android:layout_gravity="center"
      android:gravity="center"
      android:textSize="16sp"
      android:textColor="@color/white"/>
  </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>