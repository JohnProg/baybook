<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingTop="@dimen/height_status_bar"
  android:background="@drawable/img_bg_auth">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_register_optional"
    android:layout_width="0dp"
    android:layout_height="@dimen/height_toolbar"
    android:background="@color/transparent"
    android:elevation="@dimen/no_elevation"
    app:navigationIcon="@drawable/ic_arrow_white"
    tools:targetApi="lollipop"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/title_register_optional"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/create_account"
    android:textColor="@color/text_primary_dark"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar_register_optional"/>


  <TextView
    android:id="@+id/subtitle_register_optional"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Step 2 of 2"
    android:textColor="@color/text_secondary_dark"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/title_register_optional"/>

  <android.support.design.widget.TextInputLayout
    android:id="@+id/label_date_register_optional"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/guideline_begin_register_optional"
    app:layout_constraintEnd_toStartOf="@id/guideline_end_register_optional"
    app:layout_constraintTop_toBottomOf="@id/subtitle_register_optional">
    <android.support.v7.widget.AppCompatEditText
      android:id="@+id/field_date_register_optional"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/date_of_birth"
      android:inputType="date"
      android:imeOptions="actionNext"
      android:nextFocusDown="@id/field_location_register_optional"/>
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.TextInputLayout
    android:id="@+id/label_location_register_optional"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/guideline_begin_register_optional"
    app:layout_constraintEnd_toStartOf="@id/guideline_end_register_optional"
    app:layout_constraintTop_toBottomOf="@id/label_date_register_optional">
    <android.support.v7.widget.AppCompatEditText
      android:id="@+id/field_location_register_optional"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/location"
      android:inputType="text"
      android:imeOptions="actionGo"/>
  </android.support.design.widget.TextInputLayout>

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/fab_register_optional"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:src="@drawable/ic_chevron_right"
    app:fabSize="mini"
    app:borderWidth="0dp"
    app:elevation="@dimen/no_elevation"
    app:pressedTranslationZ="@dimen/no_elevation"
    app:backgroundTint="@color/icon_active_dark"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <android.support.constraint.Guideline
    android:id="@+id/guideline_begin_register_optional"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="@dimen/margin_guideline_auth"/>

  <android.support.constraint.Guideline
    android:id="@+id/guideline_end_register_optional"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_end="@dimen/margin_guideline_auth"/>

</android.support.constraint.ConstraintLayout>
