<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/img_bg_auth"
  android:paddingTop="@dimen/height_status_bar"
  android:focusableInTouchMode="true"
  android:fitsSystemWindows="true">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_login"
    android:layout_width="0dp"
    android:layout_height="@dimen/height_toolbar"
    android:background="@color/transparent"
    android:elevation="@dimen/no_elevation"
    app:navigationIcon="@drawable/ic_arrow_white"
    tools:targetApi="lollipop">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <Button
        android:id="@+id/btn_forgot_password"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/forgot_password"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"/>
    </RelativeLayout>
  </android.support.v7.widget.Toolbar>

  <android.support.v4.view.ViewPager
    android:id="@+id/vp_login"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar_login"
    app:layout_constraintBottom_toBottomOf="parent">
  </android.support.v4.view.ViewPager>

  <ImageView
    android:id="@+id/img_warning_login"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginTop="256dp"
    android:contentDescription="@string/image_description"
    android:src="@drawable/ic_warning"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/vp_login"/>

  <TextView
    android:id="@+id/txt_warning_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:text="@string/no_network_connection"
    android:textColor="@color/orange500"
    android:textSize="16sp"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/img_warning_login"/>

  <ProgressBar
    android:id="@+id/progress_bar_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="256dp"
    android:theme="@style/CircularProgress"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/vp_login"/>

  <TextView
    android:id="@+id/txt_progress_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="@string/please_wait"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/progress_bar_login"/>

  <android.support.design.widget.FloatingActionButton
    android:id="@+id/fab_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:src="@drawable/ic_chevron_right"
    app:elevation="@dimen/no_elevation"
    app:fabSize="mini"
    app:borderWidth="0dp"
    app:pressedTranslationZ="@dimen/no_elevation"
    app:backgroundTint="@color/icon_inactive_dark"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>
