<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="?attr/backgroundColor"
  android:theme="@style/NavigationView"
  android:clickable="true"
  android:focusable="true">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_language"
    android:layout_width="0dp"
    android:layout_height="@dimen/height_toolbar"
    android:background="@color/transparent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:title="@string/language"
    app:titleTextColor="?attr/textColorPrimary"/>

  <android.support.design.widget.NavigationView
    android:id="@+id/nav_view_language"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    app:elevation="0dp"
    app:itemTextColor="?attr/textColorPrimary"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar_language"
    app:menu="@menu/menu_language"/>

</android.support.constraint.ConstraintLayout>