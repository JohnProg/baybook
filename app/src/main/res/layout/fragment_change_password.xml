<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingStart="24dp"
  android:paddingEnd="24dp"
  android:background="?attr/backgroundColor"
  android:focusableInTouchMode="true">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_change_password"
    android:layout_width="0dp"
    android:layout_height="@dimen/height_toolbar"
    android:background="@color/transparent"/>

  <TextView
    android:id="@+id/title_change_password"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="@dimen/margin_micro"
    android:fontFamily="sans-serif-light"
    android:text="@string/title_change_password"
    android:textColor="?attr/textColorPrimary"
    android:textSize="24sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar_change_password"
    app:layout_constraintVertical_chainStyle="spread_inside"/>

  <android.support.design.widget.TextInputLayout
    android:id="@+id/label_username"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:layout_constraintBottom_toTopOf="@id/btn_change_password"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/title_change_password">

    <android.support.design.widget.TextInputEditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="@string/email"
      android:inputType="textEmailAddress"
      android:selectAllOnFocus="true"/>

  </android.support.design.widget.TextInputLayout>


  <Button
    android:id="@+id/btn_change_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:padding="12dp"
    android:text="Send request"
    android:theme="@style/PrimaryButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/label_username"/>

</android.support.constraint.ConstraintLayout>