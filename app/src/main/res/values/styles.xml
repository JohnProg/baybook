<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--Light theme-->
  <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorControlActivated">@color/primary</item>
    <item name="colorControlNormal">@color/text_secondary</item>

    <item name="android:homeAsUpIndicator">@drawable/ic_arrow_black</item>
    <item name="android:includeFontPadding">false</item>

    <item name="textColorPrimary">@color/text_primary</item>
    <item name="textColorSecondary">@color/text_secondary</item>
    <item name="textColorDisabled">@color/text_disabled</item>
    <item name="iconColorActive">@color/icon_active</item>
    <item name="iconColorInactive">@color/icon_inactive</item>
    <item name="toolbarColor">@color/toolbar</item>
    <item name="cardColor">@color/card</item>
    <item name="viewColor">@color/view</item>
    <item name="dividerColor">@color/divider</item>
    <item name="starBarColor">@color/icon_active</item>
  </style>

  <!--Dark theme-->
  <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorControlActivated">@color/primary</item>
    <item name="colorControlNormal">@color/text_secondary_dark</item>

    <item name="android:homeAsUpIndicator">@drawable/ic_arrow_white</item>
    <item name="android:includeFontPadding">false</item>

    <item name="textColorPrimary">@color/text_primary_dark</item>
    <item name="textColorSecondary">@color/text_secondary_dark</item>
    <item name="textColorDisabled">@color/text_disabled_dark</item>
    <item name="iconColorActive">@color/icon_active_dark</item>
    <item name="iconColorInactive">@color/icon_inactive_dark</item>
    <item name="backgroundColor">@color/background_dark</item>
    <item name="cardColor">@color/card_dark</item>
    <item name="viewColor">@color/view_dark</item>
    <item name="toolbarColor">@color/toolbar_dark</item>
    <item name="dividerColor">@color/divider_dark</item>
    <item name="starBarColor">@color/icon_active_dark</item>
  </style>

  <style name="AppTheme.Dark.Authentication" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorControlActivated">@color/text_primary_dark</item>
    <item name="colorControlNormal">@color/text_secondary_dark</item>
  </style>

  <style name="WelcomeButton" parent="Widget.AppCompat.Button.Colored">
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
  </style>

  <style name="FlatButton" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:textColor">@color/primary</item>
  </style>

  <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:textColor">?attr/textColorPrimary</item>
  </style>

  <style name="CircularProgress" parent="Theme.AppCompat.Light">
    <item name="colorAccent">@color/white</item>
  </style>

  <style name="RatingBar" parent="Theme.AppCompat">
    <item name="colorControlNormal">?attr/starBarColor</item>
    <item name="colorControlActivated">@color/orange500</item>
  </style>

  <style name="NavigationView">
    <item name="android:overScrollMode">never</item>
  </style>

  <style name="SearchView">
    <item name="floatingSearch_backgroundColor">?attr/viewColor</item>
    <item name="floatingSearch_viewSearchInputTextColor">?attr/textColorPrimary</item>
    <item name="floatingSearch_viewSuggestionItemTextColor">?attr/textColorSecondary</item>
    <item name="floatingSearch_hintTextColor">?attr/textColorSecondary</item>
    <item name="floatingSearch_dividerColor">?attr/dividerColor</item>
    <item name="floatingSearch_clearBtnColor">?attr/iconColorActive</item>
    <item name="floatingSearch_leftActionColor">?attr/iconColorActive</item>
    <item name="floatingSearch_menuItemIconColor">?attr/iconColorActive</item>
    <item name="floatingSearch_suggestionRightIconColor">?attr/iconColorInactive</item>
    <item name="floatingSearch_actionMenuOverflowColor">?attr/iconColorActive</item>
  </style>
</resources>
